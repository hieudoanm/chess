{
  "name": "chess",
  "version": "0.0.1",
  "description": "Chess",
  "main": "dist/index.js",
  "repository": "git@github.com:hieudoanm/chess.git",
  "author": "hieudoanm <hieumdoan@gmail.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">= 14",
    "npm": ">= 8",
    "yarn": "1"
  },
  "scripts": {
    "build:server": "yarn workspace @chess/server build",
    "build:shared": "yarn workspace @chess/shared build",
    "build:web": "yarn workspace @chess/web build",
    "build": "yarn build:server && yarn build:shared && yarn build:web",
    "dev:server": "yarn workspace @chess/server dev",
    "dev:web": "yarn workspace @chess/web dev",
    "dev": "concurrently --kill-others-on-fail \"yarn dev:server\" \"yarn dev:web\"",
    "lint:server": "yarn workspace @chess/server lint",
    "lint:shared": "yarn workspace @chess/shared lint",
    "lint:web": "yarn workspace @chess/web lint",
    "lint": "yarn lint:server && yarn lint:shared && yarn lint:web",
    "test:server": "yarn workspace @chess/server test",
    "test:shared": "yarn workspace @chess/shared test",
    "test:web": "yarn workspace @chess/web test",
    "test": "yarn test:server && yarn test:shared && yarn test:web",
    "start:server": "yarn workspace @chess/server start",
    "start:shared": "yarn workspace @chess/shared start",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@nrwl/nx-cloud": "latest",
    "concurrently": "7.3.0",
    "husky": "8.0.1",
    "nx": "14.6.4",
    "prettier": "2.7.1",
    "pretty-quick": "3.1.3"
  },
  "workspaces": [
    "packages/*"
  ]
}
