{
  "name": "@chess/app",
  "version": "0.0.1",
  "description": "Chess App",
  "main": "dist/index.js",
  "repository": "git@github.com:hieudoanm/chess-app.git",
  "author": "hieudoanm <hieumdoan@gmail.com>",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">= 14",
    "npm": ">= 8",
    "yarn": "1"
  },
  "scripts": {
    "build:elo": "yarn workspace @chess/elo build",
    "build:server": "yarn workspace @chess/server build",
    "build:web": "yarn workspace @chess/web build",
    "build": "yarn build:server && yarn build:elo && yarn build:web",
    "lint:elo": "yarn workspace @chess/elo lint",
    "lint:server": "yarn workspace @chess/server lint",
    "lint:web": "yarn workspace @chess/web lint",
    "lint": "yarn lint:server && yarn lint:elo && yarn lint:web",
    "test:elo": "yarn workspace @chess/elo test",
    "test:server": "yarn workspace @chess/server test",
    "test:web": "yarn workspace @chess/web test",
    "test": "yarn test:server && yarn test:elo && yarn test:web",
    "dev:server": "yarn workspace @chess/server dev",
    "dev:web": "yarn workspace @chess/web dev",
    "dev": "concurrently --kill-others-on-fail \"yarn dev:server\" \"yarn dev:web\"",
    "start:server": "yarn workspace @chess/server start",
    "start:elo": "yarn workspace @chess/elo start",
    "prepare": "husky install",
    "graph": "nx graph"
  },
  "devDependencies": {
    "@nrwl/nx-cloud": "15.0.2",
    "concurrently": "7.5.0",
    "husky": "8.0.2",
    "nx": "15.0.11",
    "prettier": "2.7.1",
    "pretty-quick": "3.1.3"
  },
  "workspaces": [
    "packages/*",
    "services/*"
  ]
}
